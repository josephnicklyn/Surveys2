<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical"
    android:paddingTop="4dp ">

    <TextView
        android:id="@+id/sq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sq_title_padding"
        android:text="Survey Title"
        android:textColor="@color/sq_title_text_color"
        android:textSize="@dimen/sq_title_text_size" />

    <FrameLayout
        android:id="@+id/sq_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/sq_title_padding"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

    </FrameLayout>
</LinearLayout>