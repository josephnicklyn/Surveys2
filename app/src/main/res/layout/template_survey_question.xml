<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sq_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/bottom_line"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="fill_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sq_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:padding="@dimen/sq_title_padding"
            android:text="Survey Title"
            android:textColor="@color/sq_title_text_color"
            android:textSize="@dimen/sq_title_text_size" />

        <TextView
            android:id="@+id/sq_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="8dp"
            android:layout_weight="0"
            android:background="@drawable/round_border"
            android:elevation="4dp"
            android:gravity="bottom"
            android:padding="12dp"
            android:text="12"
            android:textAlignment="gravity"
            android:textColor="@color/sq_title_text_color" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/sq_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/sq_title_padding"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:orientation="vertical">

    </FrameLayout>
</LinearLayout>